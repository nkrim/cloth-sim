CXX = g++
CXXFLAGS = -std=c++11 -Wall -g
SFMLFLAGS = -lsfml-graphics -lsfml-window -lsfml-system
OPENGLFLAGS = -framework OpenGL

OUT = clothsim
OBJS = main.o global-entities.o \
		states.o mouse-tracker.o history.o \
		letter.o multi-text.o multi-text-cursor.o \
		text-input.o string-change-snapshot.o \
		item-list.o menu-list.o menu-bar.o int-snapshot.o \
		parrot-menu-controller.o bitmask-menu-controller.o \
		dropdown-menu.o button.o number-input.o \
		app-components/help-text-box.o \
		render.o cloth.o

all: $(OBJS)
	$(CXX) $(CXXFLAGS) $(SFMLFLAGS) $(OPENGLFLAGS) $(OBJS) -o $(OUT)

.PHONY: clean
clean:
	rm -rf *.o $(OUT)